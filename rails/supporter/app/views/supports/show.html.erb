<h1><%= @s.name %></h1>
<a href="mailto:<%= @s.email %>"><%= @s.email %></a>
<p><%= @s.department %></p>
<p><%= @s.message %></p>
<p><%= @s.done ? "Done" : "Not Done" %></p>


<%= link_to "Edit", edit_support_path(@s), class: "btn btn-info btn-sm" %>
<%= link_to "Delete", support_path(@s), {method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this support?"}}%>
