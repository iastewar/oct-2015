<%= @s.errors.full_messages.join(", ") %>
<%= form_for @s do |f| %>
  <div class="form-group">
    <%#= f.collection_select :score_id, Score.all, :id, :name %>
    <%= f.select :kind, ["Ruby", "HTML", "CSS", "JavaScript"] %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :work %>
    <%= f.text_area :work, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
