<h1><%= @s.kind %></h1>
<h3><%= @s.title %></h3>
<pre><code><%= @s.work %></code></pre>

<%= link_to "Edit", edit_snippet_path(@s), class: "btn btn-info btn-sm" %>
<%= link_to "Delete", snippet_path(@s), {method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this code snippet?"}}%>
