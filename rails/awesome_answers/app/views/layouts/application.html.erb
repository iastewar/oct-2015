<!DOCTYPE html>
<html>
<head>
  <title>AwesomeAnswers</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <%= render "/layouts/nav" %>

    <% if flash[:notice] %>
    <div class="alert alert-success" role="alert"><div class="notice"><%= flash[:notice] %></div></div>
    <% elsif flash[:alert] %>
    <div class="alert alert-danger" role="alert"><div class="notice"><%= flash[:alert] %></div></div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
