<form method="post" action="/">
  <div>
    <label for="names">Names</label>
    <textarea name="names"><%= session[:names] %></textarea>
  </div>
  <div>
    <label for"num_teams">Number of Teams</label>
    <input type="text" name="num_teams" value=<%= session[:num_teams] %>>
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
<div>
  <table>
    <thead>
      <tr>
        <% if @team_error %>
          <th>Error: not enough names for the number of teams given</th>
        <% end %>

        <% if  @teams%>
          <% for i in 0...@teams.length %>
            <th><%=i+1  %></th>
          <% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% if  @teams%>
        <% for i in 0...@teams.length %>
          <td><% @teams[i].each do |name| %>
            <%= name %><br>
          <% end %></td>
        <% end %>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>
