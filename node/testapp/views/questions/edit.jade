extends ../layout

block content
    h1.
        Question ID #{question._id}
    form(action='/questions/#{question._id}/edit',method='post',name='updatequestion',enctype='application/x-www-form-urlencoded')
        p Title:
            input#inputTitle(type='text', value='#{question.title}', name='title')
        p Body:
            input#inputBody(type='text', value='#{question.body}', name='body')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update
